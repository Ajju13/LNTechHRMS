<!-- Page Content -->
<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Employee Managment</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Dashboard/ViewEmployee">Employee</a></li>
                    <li class="breadcrumb-item active">View All Employee</li>
                </ul>
            </div>
            <div class="col-auto float-end ms-auto">
                <a href="#" class="btn add-btn" data-bs-toggle="modal" data-bs-target="#add_employee"><i class="fa fa-plus"></i> Add Employee</a>
                <div class="view-icons">
                    <a href="#" class="list-view btn btn-link active"><i class="fa fa-bars"></i> List View</a>
                    <a href="#" class="card-view btn btn-link"><i class="fa fa-address-card"></i> Tile View</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /Page Header -->
    <div class="text-center mt-4">
        @using (Html.BeginForm("ViewEmployee", "Dashboard", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group mx-sm-3 mb-2">
                <label for="searchBy" class="mr-2">Search By:</label>
                <div class="form-check form-check-inline">
                    @Html.RadioButton("searchBy", "ByEmployeeID", true, new { id = "searchByEmployeeID", @class = "form-check-input" })
                    <label class="form-check-label" for="searchByEmployeeID">Employee ID</label>
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButton("searchBy", "ByEmployeeName", false, new { id = "searchByEmployeeName", @class = "form-check-input" })
                    <label class="form-check-label" for="searchByEmployeeName">Employee Name</label>
                </div>
            </div>
            <div class="form-group mb-2">
                @Html.TextBox("searchValue", null, new { @class = "form-control", placeholder = "Enter search term" })
                <br />
                <button type="submit" class="btn btn-primary ml-2">Search</button>
            </div>
        }
    </div>
    <br />
    <!-- Grid View Container -->
    <div class="row staff-grid-row card-view" id="employeeCard">
        @if (Model.Employees.Any())
        {
            foreach (var employee in Model.Employees)
            {
                <div class="col-md-4 col-sm-6 col-12 col-lg-4 col-xl-3 employee-card">
                    <div class="profile-widget">
                        <div class="profile-img">
                            <a href="profile.html" class="avatar"><img src="@Url.Content(employee.Emp_Image)" alt="Employee Image"></a>
                        </div>
                        <div class="dropdown profile-action">
                            <a href="#" class="action-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                @Html.ActionLink("Edit", "EditEmployee", new { id = employee.Emp_id }, new { @class = "dropdown-item" })
                                @using (Html.BeginForm("DeleteEmployee", "Dashboard", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this employee?');" }))
                                {
                                    @Html.Hidden("id", employee.Emp_id)
                                    <button type="submit" class="dropdown-item">Delete</button>
                                }
                                @Html.ActionLink("Print", "PrintEmployee", "Print", new { id = employee.Emp_id }, new { @class = "dropdown-item", target = "_blank" })
                            </div>
                        </div>
                        <h4 class="user-name m-t-10 mb-0 text-ellipsis"><a href="profile.html">@employee.Name</a></h4>
                        <div class="small text-muted">@employee.JobTitle</div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <p>No employees found.</p>
            </div>
        }
    </div>
    <!-- /Grid View Container -->
    <!-- Employee Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive list-view" id="employeeList">
                <table class="table table-striped custom-table datatable">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Employee ID</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th class="text-nowrap">Join Date</th>
                            <th>Job Title</th>
                            <th class="text-end no-sort">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Employees.Any())
                        {
                            foreach (var employee in Model.Employees)
                            {
                                <tr>
                                    <td>
                                        <img src="@Url.Content(employee.Emp_Image)" alt="Employee Image" style="width: 40px; height: 40px; border-radius: 50%;" />
                                    </td>
                                    <td>@employee.Name</td>
                                    <td>@employee.Emp_id</td>
                                    <td>@employee.Email</td>
                                    <td>@employee.Phone</td>
                                    <td>@employee.JoinDate.ToShortDateString()</td>
                                    <td>@employee.JobTitle</td>
                                    <td class="text-end">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="@Url.Action("EditEmployee", new { id = employee.Emp_id })" class="dropdown-item" data-toggle="modal" data-target="#edit_employee">
                                                    <i class="fa fa-pencil m-r-5"></i> Edit
                                                </a>
                                                @using (Html.BeginForm("DeleteEmployee", "Dashboard", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this employee?');" }))
                                                {
                                                    @Html.Hidden("id", employee.Emp_id)
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="fa fa-trash-o m-r-5"></i> Delete
                                                    </button>
                                                }
                                                @Html.Raw(Html.ActionLink("Print", "PrintEmployee", "Print", new { id = employee.Emp_id }, new { @class = "dropdown-item", target = "_blank", onclick = "window.open(this.href, '_blank'); return false;" }).ToHtmlString())

                                            </div>
                                        </div>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No employees found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
